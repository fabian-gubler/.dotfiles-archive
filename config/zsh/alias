# Short form
alias v="nvim"
alias python="python3.8"
alias rand="autorandr"
alias d="devour"
alias lg="lazygit"
alias p="python3"
alias zt="devour zathura"
alias mt="devour masterpdfeditor5"
alias sv="sudoedit"
alias t="todo-txt -d /home/fabian/nextcloud/todo/config"
alias td="todo-txt -d /home/fabian/nextcloud/todo/config-dev"
alias tdv="nvim -c 'sort' /home/fabian/nextcloud/todo/todo-dev.txt"
alias tv="nvim -c 'sort' /home/fabian/nextcloud/todo/todo.txt"
alias sonar="GTK_THEME=0 ~/Sonargraph/Sonargraph &|"

# Productivity
alias pomo="pomogoro --config ~/.config/pomogoro/config.toml"
alias template="$HOME/.dotfiles/scripts/bash/template_maker.sh"
alias nightlight="pkill -USR1 redshift"
alias deploy="$HOME/.dotfiles/scripts/webdev/deploy.sh"
alias .="exa -a"
alias ..="cl .."
alias ...="cl ../.."
alias gpush="git add . && git commit -m 'manual update' && git push"
alias sound="sudo python3 $HOME/.dotfiles/scripts/utils/sound/applyimproved.py $HOME/.dotfiles/scripts/utils/sound/alc285.txt"
alias pls='sudo $(fc -ln -1)'
alias q="exit"
alias zoomdl="zoomdl -u"
alias top="gotop -l minimal"
alias xev="xev -event keyboard  | egrep -o 'keycode.*\)'"

# File Operations
alias rsyncy='sudo rsync -a --info=progress2'
alias rsync-delete="sudo rsync -a --delete --info=progress2"

# Maintenance
alias cleancache="sudo paccache -rk 1 && paccache -ruk0"
alias listinstall="expac --timefmt='%Y-%m-%d %T' '%l\t%n'|sort -n"
alias unused="yay -Ycq"
alias large-dir="sudo du -ahx / | sort -rh | head -20"

# Pacman
alias pacman='sudo pacman --color auto'
alias update='yay -Syyu'

# -------------------
# Functions 
# -------------------

# Directory
cl() {
        cd "$@" && exa -a;
}

zl() {
        zshz "$@" && exa -a;
}
