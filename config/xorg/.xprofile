#!/bin/sh

# general
export EDITOR=nvim
export XDG_SESSION_TYPE=x11
export GDK_BACKEND=x11

# theme
export GTK_THEME=Nordic
export QT_QPA_PLATFORMTHEME=qt6ct
export QT_SCALE_FACTOR=1.5

# paths
export XDG_CONFIG_HOME="$HOME/.config"
export PATH="/usr/sbin:/usr/local/go/bin:$HOME/go/bin:$HOME/.cargo/bin:$HOME/.local/bin:$PATH"
export PATH="$HOME/.dotfiles/scripts/utils:$HOME/.dotfiles/scripts/tmux:$PATH"
export LD_LIBRARY_PATH=/usr/local/lib
export ZDOTDIR=$HOME/.config/zsh     
export ANKI_BASE="$HOME/nextcloud/apps/anki-data"

# startup
unclutter -idle 1 & # hide mouse pointer
picom --config $HOME/.dotfiles/config/picom/picom.conf & # window compositor
hsetroot -solid "#252A34" & # solid background
xset s off -dpms & # monitor always on
nextcloud --background & # establish connection to cloud server
clipmenud & # clipboard manager daemon
redshift -l 47.66667:8.98333 & # night light with coordinates
xbindkeys & # playerctl with headphones
mpd & # music player daemon
flatpak run org.signal.Signal --start-in-tray --no-sandbox & # messenger
protonmail-bridge --no-window & # mail backend
nm-applet & # network control
dbus-update-activation-environment --all & # keyring

# chmod script (if needed) and execute it
KEYRING_PATH=/home/fabian/nextcloud/apps/keyring.sh
[ -x $KEYRING_PATH ] && sudo bash $KEYRING_PATH || [chmod +x $KEYRING_PATH && sudo bash $KEYRING_PATH]

# scripts
$HOME/.dotfiles/scripts/utils/bat-indicator &
