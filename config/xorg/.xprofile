#!/bin/sh

# --- Display
export XDG_SESSION_TYPE=x11
export GDK_BACKEND=x11
export GTK_THEME=Nordic
export QT_QPA_PLATFORMTHEME=qt5ct

# --- Path
export XDG_CONFIG_HOME="$HOME/.config"
export PATH="/usr/sbin:/usr/local/go/bin:/home/fabian/go/bin:/home/fabian/.cargo/bin:/home/fabian/.local/bin:$PATH"
export LD_LIBRARY_PATH=/usr/local/lib
export ZDOTDIR=$HOME/.config/zsh     

# --- Preferences
export EDITOR=less
export PAGER=less
export MANPAGER=less
export TERM=alacritty
export LANG="en_US.utf8"
export MOZ_USE_XINPUT2=1

# --- Keyring
eval $(gnome-keyring-daemon --start)
export SSH_AUTH_SOCK
export GPG_AGENT_INFO

# --- Startup
exec systemctl --user import-environment &
bluetoothctl power on &
unclutter -idle 1 & # hide mouse pointer
xset r rate 350 60 &
xset s off -dpms &
picom --config ~/.dotfiles/config/picom/picom.conf & # compositor
hsetroot -solid "#252a34" & # solid background
rumno-background & # daemon for audio control
setxkbmap us altgr-intl & # us layout with umlaut
nm-applet &
redshiftshift -l 47.66667:8.98333 & # night light with coordinates
xinput set-int-prop 20 "Device Enabled" 8 0 & # disables internal keyboard
mpDris2 &
# nextcloud & # cloud provider

# --- Scripts
/home/fabian/.dotfiles/scripts/utils/battery-indicator.sh &
