[calendars]

[[pers]]
path = ~/nextcloud/.calendars/pers
type = calendar
color = dark blue

[[uni]]
path = ~/nextcloud/.calendars/uni
type = calendar
color = dark green

[[task]]
path = ~/nextcloud/.calendars/task
type = calendar
color = light red

[[birthday]]
path = ~/nextcloud/.calendars/birthday/
type = calendar
color = yellow

[locale]
timeformat = %H:%M
dateformat = %d.%m.
longdateformat = %d.%m.%Y
datetimeformat =  %d.%m. %H:%M
longdatetimeformat = %d.%m.%Y %H:%M

[default]
default_calendar = pers
show_all_days = True
timedelta = 1d

[view]
blank_line_before_day = True
event_view_always_visible = False
