# Read desired time
TIME=$1
SCRIPTS_DIR=$HOME/.dotfiles/scripts/utils/

# Prompt for Do not disturb
while true; do
    read -p "Disable notifications? (y/n) " yn
    case $yn in
        [Yy]* ) dunstctl set-paused true; break;;
        [Nn]* ) dunstctl set-paused false; break;;
        * ) echo "Please answer yes or no. ";;
    esac
done


TIME=$1

# Notify at time
at $TIME << ENDMARKER
	# dunstify "Alarm:" "$(date '+%T')"
	dunstify "Alarm" 
	dunstctl set-paused false
ENDMARKER

# NOTE: Can be more generalized as
# a scheduler by passing the desired script 
# as the second argument (see below)

# SCRIPT=$2
# at $TIME << ENDMARKER
# $2
# ENDMARKER
